{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 left-menu-container slideInLeft">
            {% include 'includes/leftmenu.html.twig' %}
        </div>
        <div class="col-sm-9 right-menu-container-80" id="right-menu-container">
            <h1 class="h1-titre"><i class="fas fa-wrench"></i> Les outils de cr√©ations :</h1>
            <hr>
            {% for tool in tools %}
                <div class="article-content animated slideInRight">
                    <h2 class="h2-titre">{{ tool.title }}</h2>
                    <br />
                    <img class="img-fluid" src="{{ tool.image }}" alt="" title="" />
                    <br /><br />
                    <div>{{ tool.content }}</div>
                    <br />
                    <div class="btn-tools">
                        <a class="btn btn-outline-warning" target="_blank" href="{{ tool.link }}">Visitez le site officiel</a>
                        <a class="btn btn-outline-info" href="{{ path('tools_by_id',{'id': tool.id}) }}">Lire l'article</a>
                    </div>
                    <hr>
                    <br />
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}