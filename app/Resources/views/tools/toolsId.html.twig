{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 left-menu-container slideInLeft">
                {% include 'includes/leftmenu.html.twig' %}
            </div>
            <div class="col-sm-9 right-menu-container-80" id="right-menu-container">
                <h1 class="h1-titre"><i class="fas fa-wrench"></i> Les outils de créations :</h1>
                <hr>

                    <div class="article-content animated slideInRight">
                        <h2 class="h2-titre">{{ tools.title }}</h2>
                        <br />
                        <img class="img-fluid" src="{{ tools.image }}" alt="" title="" />
                        <br /><br />
                        <div>{{ tools.content }}</div>
                        <br />
                        <div class="btn-tools-id">
                            <a class="btn btn-outline-warning" target="_blank" href="{{ tools.link }}">Visitez le site officiel</a>
                            <a class="btn btn-outline-info" href="{{ path('tools_show') }}">Retour à la liste des outils</a>
                        </div>
                        <br />
                    </div>

            </div>
        </div>
    </div>
{% endblock %}