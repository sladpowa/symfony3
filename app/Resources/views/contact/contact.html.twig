{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 left-menu-container slideInLeft">
            {% include 'includes/leftmenu.html.twig' %}
        </div>
        <div class="col-sm-9 right-menu-container-80 animated slideInRight" id="right-menu-container">
            <h1 class="h1-titre">Formulaire de contact :</h1>
            <form action="{{ path('valid_contact') }}" method="POST">
                {{ form_start(formContact) }}
                <label for="">Votre email : </label>
                {{ form_widget(formContact.email, {'attr':{'placeholder' : "Votre adresse email" },'required': true}) }}
                <br />
                <label for="">Sujet de l'email : </label>
                {{ form_widget(formContact.subject, {'attr':{'placeholder' : "Votre sujet" }}) }}
                <br />
                <label for="">Contenu de l'email : </label>
                {{ form_widget(formContact.content, {'attr':{'placeholder' : "Votre email" }}) }}
                <br />
                <button class="btn btn-outline-warning" type="submit">Envoyer</button>
                {{ form_end(formContact) }}

            </form>

        </div>
    </div>
</div>
{% endblock %}