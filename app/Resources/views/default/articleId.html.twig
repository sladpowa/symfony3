{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 left-menu-container slideInLeft">
                {% include 'includes/leftmenu.html.twig' %}
            </div>
            <div class="col-sm-9 right-menu-container-80" id="right-menu-container">
                <h1 class="h1-titre"><i class="fas fa-newspaper"></i> {{ article.title }}</h1>
                <br>
                <div>
                    <b>Cat√©gorie : <em>JEUX</em></b>
                    <div>Date : {{ article.createdAt | date("d-m-Y") }}</div>
                    <br>
                    <div class="row">
                        <div class="col-6 col-md-4">
                            <img src="{{ article.image }}" alt="" title="Article 1" class="img-fluid">
                        </div>
                        <div class="col-12 col-md-8 article-content">
                            <h3 class="h3-titre">Sous titre de l'article</h3>
                            <div class="content-article">{{ article.content }}</div>
                            <a href="{{ path('homepage') }}" class="btn btn-outline-warning btn-lire">Page d'accueil</a>
                        </div>
                        <br />
                        <hr>
                        <div class="col-12">
                            {% include '@FOSComment/Thread/async.html.twig' with {'id': 'foo'} %}
                        </div>
                    </div>
                </div>
                <hr>
            </div>
        </div>
    </div>
{% endblock %}