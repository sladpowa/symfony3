{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 left-menu-container slideInLeft">
            {% include 'includes/leftmenu.html.twig' %}
        </div>
        <div class="col-sm-9 right-menu-container-80" id="right-menu-container">
            <h1 class="h1-titre"><i class="fas fa-gamepad"></i> JEUX :</h1>
            <table class="table table-striped animated slideInRight">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Titre:</th>
                        <th scope="col">Catégorie:</th>
                        <th scope="col">Description:</th>
                        <th scope="col">Image:</th>
                        <th scope="col">Date:</th>
                        <th scope="col">Actions:</th>
                    </tr>
                </thead>
                <tbody>
                {% for game in games %}
                    <tr>
                        <td>{{ game.title }}</td>
                        <td>{{ game.category.type }}</td>
                        <td>{{ game.content }}</td>
                        <td><img src="{{ game.image }}" alt="" title="Supa Sword Masta"/> </td>
                        <td>{% if game.createdAt %}{{ game.createdAt|date('d-m-Y à H:i:s') }}{% endif %}</td>
                        <td>
                            <ul>
                                <li class="text-center">
                                    <a class="btn btn-outline-warning" href="{{ path('games_show', { 'id': game.id }) }}">Plus d'infos</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
